<div class='col-md-6 col-md-offset-3'>
  <div class="panel panel-primary">
    <div class="panel-heading">登入會員</div>
      <div class="panel-body">
       <%= form_tag '/login' do  %>
        <div class='form-group text-center'>
          <%= label_tag :'名稱' %>
          <%= text_field_tag :username,nil ,placeholder: "請輸入您的會員名稱" %>
        </div>
        <div class='form-group text-center'>
          <%= label_tag :'密碼' %>
          <%= password_field_tag :password %>
        </div>
        </br>
        <div class='form-group text-center'>
        <%= submit_tag '會員登入',class:'btn btn-primary' %>
       <% end %>
        </div>
      </div>
  </div>
</div>