<%= render 'errors/errors',obj:@comment %>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class='col-md-1'>
      </div>
      <div class="col-md-7  well ">
          <% @post.categories.each do |category| %>
            <%= link_to category_path(category) do %>
              <span class="badge"><%= category.name %></span>
            <% end %>
          <% end %>
      
        <div class="table-responsive">
          <table class="table">
            <h4 class="text-danger"><%= @post.title %></h4>
          
               <%= social_share_button_tag(@post.title) %>
               <%= link_to "收藏" ,collect_post_path(@post),method: "post",class:"btn btn-danger btn-xs" %>


            <p class='pull-right'>
              Created by <%=link_to @post.creator.username,user_path(@post.creator) %>
              <%= link_to '編輯修改',edit_post_path(@post) %>
              <%= @post.created_at %>
            </p>
            <tbody>
              <tr>
                <td><%= @post.description.html_safe %></td>
              </tr>
            </tbody>
          </table>
        </div>

        

        <span><%= link_to '< 上一篇' ,@post.previous if @post.previous %></span>
        <span class='pull-right'><%= link_to '下一篇 >',@post.next if @post.next %></span>
        <div class='text-center'><%= link_to 'Sources', fix_url(@post.url) %></div>
      
      </div>

      <div class="col-md-3">
        <% if logged_in? %>
          <%= form_for [@post,@comment] do |f| %>
            <div class='form-group'>
            <%= f.label :'Say something 說些什麼！？' %>
            <%= f.text_area :body ,class:'form-control' %>
            </div>

            <%= f.submit '留言' ,class:'btn btn-primary btn-xs pull-right'%>
          <% end %>
        </br>
     
        <% end %>
        <% @post.reload.comments.each do |comment| %>
          <%= render 'comments/comment',comment: comment %>
          <% if logged_in? && current_user.admin? %>
            <% #link_to 'Delete',[@post,comment],method:'delete',class:'btn btn-danger btn-xs' %>
          <% end %>
        <% end %>
      </div>
      <div class='col-md-1'>
      </div>
    </div>
  </div>
</div>